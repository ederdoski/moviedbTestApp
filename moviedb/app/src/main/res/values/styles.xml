<resources>

    <!-- Fonts -->
    <style name="GeneralSans400FontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/general_sans_regular</item>
    </style>

    <style name="GeneralSans500FontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/general_sans_medium</item>
    </style>

    <style name="GeneralSans600FontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/general_sans_semi_bold</item>
    </style>

    <!-- Editext -->

    <style name="OntopEditext">
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:textColor">@color/text_editext</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/general_sans_regular</item>
    </style>

    <!-- Buttons -->

    <style name="ShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_6sdp</item>
    </style>

    <style name="MainBtn" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">@dimen/space_0</item>
        <item name="android:layout_height">@dimen/wrap_content</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/general_sans_semi_bold</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearance">@style/ShapeAppearance</item>
    </style>

</resources>
